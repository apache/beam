ARG BASE_PYTHON_IMAGE
FROM $BASE_PYTHON_IMAGE
MAINTAINER "Apache Beam <dev@beam.apache.org>"

COPY requirements.txt /tmp/user_requirements.txt
RUN pip install -r /tmp/user_requirements.txt && \
    # Remove pip cache.
    rm -rf /root/.cache/pip

