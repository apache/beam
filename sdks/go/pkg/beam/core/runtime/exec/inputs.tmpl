func (v *iterNative) read{{$x.Name}}(val *{{$x.Type}}) bool {
	elm, err := v.cur.Read()
	if err != nil {
		if err == io.EOF {
			return false
		}
		panic(fmt.Sprintf("broken stream: %v", err))
	}

    *val = elm.Elm.Interface().({{$x.Type}})
    return true
}

