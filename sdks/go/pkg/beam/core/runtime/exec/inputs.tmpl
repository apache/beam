type iterNative struct {
	s     ReStream
	fn    reflect.Value

	// cur is the "current" stream, if any.
	cur Stream
}

func (v *iterNative) Init() error {
	v.cur = v.s.Open()
	return nil
}

func (v *iterNative) Value() reflect.Value {
	return v.fn
}

func (v *iterNative) Reset() error {
	if err := v.cur.Close(); err != nil {
		return err
	}
	v.cur = nil
	return nil
}

